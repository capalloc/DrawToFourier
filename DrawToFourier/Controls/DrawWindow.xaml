<Window x:Class="DrawToFourier.DrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawToFourier"
        mc:Ignorable="d"
        Title="DrawToFourier" Height="900" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Canvas Name="DrawCanvas" Grid.Row="0" Grid.ColumnSpan="3" Background="Transparent" MouseDown="DrawCanvas_MouseDown" MouseMove="DrawCanvas_MouseMove">
            <Image Name="DrawImage"></Image>
        </Canvas>
        
        <Button Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">Load</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="10,10,10,10">Save</Button>
        <Button Grid.Row="1" Grid.Column="2" Margin="10,10,10,10">Simulate</Button>
    </Grid>
</Window>
