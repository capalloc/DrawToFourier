<Window x:Class="DrawToFourier.UI.DrawWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cnv="clr-namespace:DrawToFourier.UI.Converters" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        mc:Ignorable="d"
        Title="DrawToFourier" 
        DataContext="{Binding Path=ImageContext, RelativeSource={RelativeSource Self}}"
        SizeToContent="WidthAndHeight"
        >
    <Window.Resources>
        <sys:Double x:Key="buttonMenuHeightFactor">0.125</sys:Double>
        <cnv:MultiplyConverter x:Key="multiplyConverter" />
    </Window.Resources>
    <Grid SizeChanged="MainContainer_SizeChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{Binding DesiredHeight, Converter={StaticResource multiplyConverter}, ConverterParameter={StaticResource buttonMenuHeightFactor}}" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image Name="DrawImage" Grid.Row="0" Grid.ColumnSpan="4" Height="{Binding DesiredHeight}" Width="{Binding DesiredWidth}" Source="{Binding ImageSource}" />

            <Button Grid.Row="1" Grid.Column="0" Margin="5,5,5,5" Content="Load" />
            <Button Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" Content="Save" />
            <Button Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" Content="Reset" />
            <Button Grid.Row="1" Grid.Column="3" Margin="5,5,5,5" Content="Simulate" />
        </Grid>
    </Grid>
</Window>
